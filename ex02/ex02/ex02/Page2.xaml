<Page
    x:Class="ex02.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ex02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Button>
                <Button.Name>okButton</Button.Name>
                <Button.Content>OKAY</Button.Content>
                <Button.Background>Yellow</Button.Background>
                <Button.Foreground>Red</Button.Foreground>
                <Button.BorderBrush>Red</Button.BorderBrush>
                <Button.BorderThickness>1</Button.BorderThickness>
                <Button.Margin>10,10,10,10</Button.Margin>
            </Button>
            <TextBlock>
                <TextBlock.Name>myTextBlock</TextBlock.Name>
                <TextBlock.Text>This is some text</TextBlock.Text>
                <TextBlock.Width>200</TextBlock.Width>
                <TextBlock.Margin>50,50,0,0</TextBlock.Margin>
                <TextBlock.VerticalAlignment>Top</TextBlock.VerticalAlignment>
                <TextBlock.HorizontalAlignment>Left</TextBlock.HorizontalAlignment>
                <TextBlock.TextWrapping>Wrap</TextBlock.TextWrapping>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
